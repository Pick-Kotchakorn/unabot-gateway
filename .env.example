# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git!

# === LINE Messaging API ===
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here
LINE_CHANNEL_ID=your_channel_id_here

# === Google Apps Script ===
GAS_DEPLOY_ID=your_gas_deployment_id_here
GAS_PROJECT_ID=your_gas_project_id_here

# === Google Sheets ===
GOOGLE_SHEET_ID=your_google_sheet_id_here

# === Cloudflare Workers ===
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here

# === Webhook Settings ===
WEBHOOK_PATH=/webhook
WEBHOOK_SECRET=your_webhook_secret_here

# === Feature Flags ===
ENABLE_ANALYTICS=true
ENABLE_RICH_MENU=false
ENABLE_DIALOGFLOW=false

# === Logging ===
LOG_LEVEL=INFO

# === API Endpoints ===
GAS_ENDPOINT=https://script.google.com/macros/s/{GAS_DEPLOY_ID}/exec
GATEWAY_ENDPOINT=https://gateway.workers.dev
BOT_ENDPOINT=https://bot.workers.dev

# === Timeouts (milliseconds) ===
API_TIMEOUT=5000
SHEET_TIMEOUT=10000

# === Limits ===
MAX_MESSAGE_LENGTH=2000
MAX_BATCH_SIZE=100
RATE_LIMIT_PER_MINUTE=60
